pipeline {
    //agent any
    triggers {
        pollSCM '* * * * *'
      }
    agent {
        docker { image 'nginx' }
    }
    stages {
        stage('Deploy Nginx') {
            steps {
                 sh """ 
                /usr/local/bin/kubectl  get pods 
                sh 'pwd'
                sh 'ls -al'
            }
        }
    }
}
